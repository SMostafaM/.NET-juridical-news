@model IEnumerable<hoghoogh_app.Models.User>

@{
    ViewData["Title"] = "کاربران";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}



<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<div style="padding-left:50px;padding-right:50px;">
    <h1>کاربران</h1>

    <p>
        <a asp-action="Create">ساخت کاربر جدید</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.user_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.role)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.token)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user_name)
                    </td>
                    <td>
                        **************
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.token)
                    </td>
                    <td>
                        @Html.ActionLink("اصلاح", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("جزئیات", "Details", new {  id=item.Id }) |
                        @Html.ActionLink("حذف", "Delete", new { id=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>